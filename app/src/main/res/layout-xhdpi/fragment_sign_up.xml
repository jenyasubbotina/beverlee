<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.SignUpFragment"
    android:background="@drawable/background"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/new_account_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/registration"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/new_account_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_top_radius_light"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/open_registration_instruction_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="37dp"
                android:layout_marginHorizontal="90dp"
                android:gravity="center"
                android:text="@string/open_registration_instruction"
                android:textColor="@color/colorPurple"
                android:fontFamily="@font/geometria_medium"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/registration_instruction_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/open_registration_instruction_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="27dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center"
                android:text="@string/registration_instruction"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/geometria_medium"
                android:visibility="gone"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/first_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/registration_instruction_text_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="31dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/first_name"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/first_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/first_name_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:layout_marginHorizontal="28dp"
                android:paddingHorizontal="22dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/first_name_hint"
                android:inputType="textCapWords"
                android:hint="@string/first_name_hint"
                android:textColorHint="@color/colorLightGrey"/>

            <TextView
                android:id="@+id/last_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/first_name_edit_text"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginTop="24dp"
                android:text="@string/last_name"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/last_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/last_name_text_view"
                app:layout_constraintStart_toStartOf="@id/first_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/first_name_edit_text"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/first_name_hint"
                android:inputType="textCapWords"
                android:hint="@string/last_name_hint"
                android:textColorHint="@color/colorLightGrey"/>

            <TextView
                android:id="@+id/phone_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/last_name_edit_text"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginTop="24dp"
                android:text="@string/phone_number_unified"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/phone_text_view"
                app:layout_constraintStart_toStartOf="@id/first_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/first_name_edit_text"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/phone_hint_uz"
                android:inputType="phone"
                android:hint="@string/phone_hint_uz"
                android:textColorHint="@color/colorLightGrey"/>

            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phone_edit_text"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginTop="24dp"
                android:text="@string/email"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/email_text_view"
                app:layout_constraintStart_toStartOf="@id/first_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/first_name_edit_text"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/email_hint"
                android:inputType="textEmailAddress"
                android:hint="@string/email_hint"
                android:textColorHint="@color/colorLightGrey"/>

            <TextView
                android:id="@+id/country_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/email_edit_text"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginTop="29dp"
                android:text="@string/country"
                android:textColor="#3B3A39"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@id/country_text_view"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_locked"
                android:fontFamily="@font/geometria_medium"
                android:paddingHorizontal="24dp"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                android:autofillHints="@string/country" />

            <TextView
                android:id="@+id/city_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/country_spinner"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:fontFamily="@font/geometria_actual"
                android:layout_marginTop="24dp"
                android:text="@string/city"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/city_edit_text"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@+id/city_text_view"
                app:layout_constraintStart_toStartOf="@id/first_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/first_name_edit_text"
                android:background="@drawable/edit_text_locked"
                android:layout_marginTop="9dp"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:fontFamily="@font/geometria_medium"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:autofillHints="@string/city"
                android:inputType="textCapWords"
                android:hint="@string/city"
                android:textColorHint="@color/colorLightGrey"/>

            <TextView
                android:id="@+id/password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/city_edit_text"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:layout_marginTop="29dp"
                android:text="@string/password_text"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/password_text_view"
                app:layout_constraintEnd_toEndOf="@id/first_name_edit_text"
                app:layout_constraintStart_toStartOf="@id/first_name_edit_text"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingTop="8dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorLightGrey"
                    android:letterSpacing="0.25"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/password_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/password_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="10dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/repeat_password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/password_field"
                app:layout_constraintStart_toStartOf="@id/first_name_text_view"
                android:layout_marginTop="29dp"
                android:text="@string/repeat_password_text"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/password_repeated_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/repeat_password_text_view"
                app:layout_constraintStart_toStartOf="@id/first_name_edit_text"
                app:layout_constraintEnd_toEndOf="@id/first_name_edit_text"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/password_repeated_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingTop="8dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorLightGrey"
                    android:letterSpacing="0.25"
                    android:textSize="17sp"/>

                <ImageView
                    android:id="@+id/password_repeated_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/password_repeated_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="10dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/user_agreement_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/password_repeated_field"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/sign_up_button"
                android:gravity="center"
                android:text="@string/user_agreement"
                android:fontFamily="@font/geometria_actual"
                android:textColor="#3B3A39"
                android:textSize="14sp"
                android:lineSpacingExtra="7dp"/>

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_constraintTop_toBottomOf="@id/user_agreement_text_view"
                app:layout_constraintEnd_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                app:layout_constraintBottom_toBottomOf="@id/card_layout"
                android:background="@drawable/btn_purple"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="50dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/colorPurple"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>