<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/transaction_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/grey_circle"
        android:contentDescription="@string/monitoring"/>

    <TextView
        android:id="@+id/transaction_type_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/transaction_image_view"
        app:layout_constraintStart_toEndOf="@id/transaction_image_view"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:textColor="#BCBECD"
        android:fontFamily="@font/geometria_medium"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/transaction_from_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/transaction_type_text_view"
        app:layout_constraintStart_toStartOf="@id/transaction_type_text_view"
        android:layout_marginBottom="2dp"
        android:textColor="#3B3A38"
        android:fontFamily="@font/geometria_medium"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/transaction_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/transaction_from_text_view"
        app:layout_constraintBottom_toBottomOf="@id/transaction_from_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end"
        android:text="@string/transaction_amount"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/geometria_medium"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorGreenBright"/>
</androidx.constraintlayout.widget.ConstraintLayout>