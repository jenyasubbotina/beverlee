<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".view.fragments.TransactionSearchFragment">

    <TextView
        android:id="@+id/transaction_search_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:text="@string/transaction_search"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/back_arrow_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_layout"
        app:layout_constraintDimensionRatio="H, 1:1"
        android:src="@drawable/ic_back_vector"
        android:scaleType="fitCenter"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/withdraw"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/card_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/transaction_search_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_top_radius_light"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/year_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="31dp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/year"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/year_spinner"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@id/year_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="29dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_filled"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="19sp"
                app:layout_constraintHorizontal_bias="0.508"
                android:autofillHints="@string/year"
                android:spinnerMode="dropdown"
                android:popupBackground="@drawable/rounded_rect_light_grey"/>

            <TextView
                android:id="@+id/month_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/year_spinner"
                app:layout_constraintStart_toStartOf="@id/year_text_view"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/month"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/month_spinner"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@id/month_text_view"
                app:layout_constraintStart_toStartOf="@id/year_spinner"
                app:layout_constraintEnd_toEndOf="@id/year_spinner"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_filled"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="19sp"
                app:layout_constraintHorizontal_bias="0.508"
                android:autofillHints="@string/month"
                android:spinnerMode="dropdown"
                android:popupBackground="@drawable/rounded_rect_light_grey"/>

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/month_spinner"
                app:layout_constraintStart_toStartOf="@id/year_text_view"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/date"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/first_day_spinner"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@id/date_text_view"
                app:layout_constraintStart_toStartOf="@id/year_spinner"
                app:layout_constraintEnd_toStartOf="@id/last_day_spinner"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_filled"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="19sp"
                app:layout_constraintHorizontal_bias="0.508"
                android:autofillHints="@string/date"
                android:spinnerMode="dropdown"
                android:popupBackground="@drawable/rounded_rect_light_grey"
                android:layout_marginEnd="8dp"/>

            <Spinner
                android:id="@+id/last_day_spinner"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toTopOf="@id/first_day_spinner"
                app:layout_constraintStart_toEndOf="@id/first_day_spinner"
                app:layout_constraintEnd_toEndOf="@id/year_spinner"
                android:background="@drawable/edit_text_filled"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="19sp"
                app:layout_constraintHorizontal_bias="0.508"
                android:autofillHints="@string/date"
                android:spinnerMode="dropdown"
                android:popupBackground="@drawable/rounded_rect_light_grey"
                android:layout_marginStart="8dp"/>

            <Spinner
                android:id="@+id/transaction_type_spinner"
                android:layout_width="0dp"
                android:layout_height="64dp"
                app:layout_constraintTop_toBottomOf="@id/last_day_spinner"
                app:layout_constraintStart_toStartOf="@id/year_spinner"
                app:layout_constraintEnd_toEndOf="@id/year_spinner"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_filled"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#3B3A39"
                android:textColorHint="#DBDCEA"
                android:textSize="19sp"
                app:layout_constraintHorizontal_bias="0.508"
                android:autofillHints="@string/transaction_type"
                android:spinnerMode="dropdown"
                android:popupBackground="@drawable/rounded_rect_light_grey"/>

            <Button
                android:id="@+id/search_btn"
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintTop_toBottomOf="@id/transaction_type_spinner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/transaction_type_spinner"
                app:layout_constraintEnd_toEndOf="@id/transaction_type_spinner"
                android:background="@drawable/btn_purple"
                android:text="@string/search"
                android:textAllCaps="false"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_marginVertical="50dp"
                android:elevation="2dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>