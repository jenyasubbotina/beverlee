<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.ChangePasswordFragment"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/password_change_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scroll_layout"
        android:layout_marginTop="40dp"
        android:text="@string/password_change"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/geometria_medium"
        android:textSize="19sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/back_arrow_image_view"
        android:layout_width="0dp"
        android:layout_height="22.4dp"
        app:layout_constraintTop_toTopOf="@id/password_change_text_view"
        app:layout_constraintBottom_toBottomOf="@id/password_change_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back_vector"
        android:contentDescription="@string/transfer"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/password_change_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_top_radius_light"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:overScrollMode="always">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/old_password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/card_layout"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                android:layout_marginStart="37dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/old_password"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/old_password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                app:layout_constraintTop_toBottomOf="@+id/old_password_text_view"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="28dp">

                <EditText
                    android:id="@+id/old_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingTop="8dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:letterSpacing="0.2"
                    android:textColorHint="@color/colorLightGrey"
                    android:textSize="19sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/new_password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/old_password_field"
                app:layout_constraintStart_toStartOf="@id/old_password_text_view"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/new_password"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/new_password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/old_password_field"
                app:layout_constraintEnd_toEndOf="@id/old_password_field"
                app:layout_constraintTop_toBottomOf="@+id/new_password_text_view"
                android:layout_marginTop="13dp">

                <EditText
                    android:id="@+id/new_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingTop="8dp"
                    android:paddingStart="22dp"
                    android:letterSpacing="0.25"
                    android:paddingEnd="22dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorLightGrey"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/new_password_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/new_password_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="10dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/confirm_new_password_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/new_password_field"
                app:layout_constraintStart_toStartOf="@id/old_password_text_view"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/geometria_actual"
                android:text="@string/confirm_password"
                android:textColor="#3B3A39"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/confirm_new_password_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/old_password_field"
                app:layout_constraintEnd_toEndOf="@id/old_password_field"
                app:layout_constraintTop_toBottomOf="@+id/confirm_new_password_text_view"
                android:layout_marginTop="13dp">

                <EditText
                    android:id="@+id/confirm_new_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:autofillHints="@string/password"
                    android:background="@drawable/edit_text_locked"
                    android:fontFamily="@font/geometria_medium"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingTop="8dp"
                    android:paddingStart="22dp"
                    android:paddingEnd="22dp"
                    android:letterSpacing="0.25"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorLightGrey"
                    android:textSize="19sp" />

                <ImageView
                    android:id="@+id/confirm_new__password_eye_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/confirm_new_password_edit_text"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_eye"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="7dp"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="10dp"
                    android:contentDescription="@string/password"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/change_password_error_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/confirm_new_password_field"
                app:layout_constraintStart_toStartOf="@id/confirm_new_password_field"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/error_check_internet"
                android:fontFamily="@font/geometria_medium"
                android:textSize="16sp"
                android:textColor="@color/colorRed"
                android:visibility="gone"/>

            <Button
                android:id="@+id/save_btn"
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                app:layout_constraintTop_toBottomOf="@id/confirm_new_password_field"
                app:layout_constraintBottom_toBottomOf="@id/card_layout"
                android:background="@drawable/btn_purple"
                android:text="@string/save"
                android:textAllCaps="false"
                android:fontFamily="@font/geometria_medium"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="50dp"
                android:elevation="2dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/card_layout"
                app:layout_constraintBottom_toBottomOf="@id/card_layout"
                app:layout_constraintStart_toStartOf="@id/card_layout"
                app:layout_constraintEnd_toEndOf="@id/card_layout"
                android:indeterminateTint="@color/colorPurple"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>